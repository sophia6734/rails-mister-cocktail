<h1><%= @cocktail.name %></h1>
cocktail

<h3>Ingredient</h3>

<% @cocktail.doses.each do |dose| %>
<p><%= dose.description %> | <%= dose.ingredient.name %> <%= link_to 'Delete', dose_path(dose), method: :delete, data: { confirm: "Are you sure?" }  %></p>
<% end %>

<%= link_to 'Back', cocktails_path %>

<h4>Add Ingredient</h4>
<%= simple_form_for @cocktail do |c| %>
<%= c.simple_fields_for :doses do |d| %>
  <%= d.association :ingredient %>
  <%= d.input :description %>
  <%= d.submit class: "btn btn-primary" %>
<% end %>
<% end %>
